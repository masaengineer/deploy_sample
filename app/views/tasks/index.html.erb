<h1>タスク一覧</h1>

<%= link_to '新規タスク作成', new_task_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>タスク名</th>
      <th>アクション</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td>
          <%= link_to '詳細', task_path(task), class: 'btn btn-info' %>
          <%= link_to '編集', edit_task_path(task), class: 'btn btn-warning' %>
          <%= link_to '削除', task_path(task), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
